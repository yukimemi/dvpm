{
  "name": "@yukimemi/dvpm",
  "version": "8.3.1",
  "exports": "./mod.ts",
  "tasks": {
    "check": "deno check ./**/*.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test -A",
    "ci": "deno task check && deno task lint && deno task fmt --check && deno task test",
    "hooks:install": "deno run --allow-read=deno.json,.git/hooks/ --allow-write=.git/hooks/ jsr:@hongminhee/deno-task-hooks",
    "hooks:pre-commit": "deno task ci",
    "hooks:pre-push": "deno task ci"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "exclude": ["README.md"]
  },
  "lock": false,
  "imports": {
    "@core/asyncutil": "jsr:@core/asyncutil@^1.2.0",
    "@denops/std": "jsr:@denops/std@^8.0.0",
    "@denops/test": "jsr:@denops/test@^4.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/log": "jsr:@std/log@^0.224.14",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/streams": "jsr:@std/streams@^1.0.12",
    "result-type-ts": "npm:result-type-ts@^2.2.0",
    "zod": "npm:zod@^4.1.12"
  },
  "lint": {
    "rules": {
      "exclude": ["no-slow-types"]
    }
  }
}
